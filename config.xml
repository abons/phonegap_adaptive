<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id          = "com.phonegap.example"
    version     = "1.0.0" >
  <preference name="phonegap-version" value="cli-8.1.1" />
  <name>PhoneGap Example</name>
  <description>
      An example for phonegap build docs.
  </description>
  <author href="https://build.phonegap.com" email="support@phonegap.com">
      Hardeep Shoker
  </author>
  <platform name="android">
    <resource-file src="res/values/colors.xml" target="/app/src/main/res/values/colors.xml" />
    <!-- <icon density="ldpi" background="@color/background" foreground="res/mipmap-ldpi/ic_launcher.png" /> -->
    <icon density="mdpi" background="@color/background" foreground="res/mipmap-mdpi/ic_launcher.png" />
    <icon density="hdpi" background="@color/background" foreground="res/mipmap-hdpi/ic_launcher.png" />
    <icon density="xhdpi" background="@color/background" foreground="res/mipmap-xhdpi/ic_launcher.png" />
    <icon density="xxhdpi" background="@color/background" foreground="res/mipmap-xxhdpi/ic_launcher.png" />
    <icon density="xxxhdpi" background="@color/background" foreground="res/mipmap-xxxhdpi/ic_launcher.png" />
  </platform>
</widget>